# MongoDB Connection URI
MONGO_URI=mongodb://<username>:<password>@<host>:<port>/<database>?retryWrites=true&w=majority

# Server Configuration
PORT=5000

# JWT Secret for Authentication
JWT_SECRET=your_secure_jwt_secret_key

# Node Environment
NODE_ENV=development  # Set to 'production' for live environment

# Payment Integration API Keys
STRIPE_API_KEY=your_stripe_api_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret_key

# Email Service Configuration (Optional)
EMAIL_SERVICE=gmail  # or another email service
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Optional: Base URL for the frontend
FRONTEND_URL=http://localhost:3000  # Adjust this for your production URL
